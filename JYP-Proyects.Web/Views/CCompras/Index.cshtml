@model IEnumerable<JYP_Proyects.Web.Data.Entities.CCompra>

@{
    ViewData["Title"] = "Index";
}

<h1>Compras</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Agregar una nueva compra</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoC)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoC)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
